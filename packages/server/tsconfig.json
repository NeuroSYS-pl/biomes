{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "incremental": true,
    "esModuleInterop": true,
    "composite": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "paths": {
      "@biomes/*": ["packages/*/src"]
    },
  },
  "exclude": ["test/**/*", "dist/**/*"]
}
