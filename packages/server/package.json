{
  "name": "@biomes/server",
  "version": "0.1.0",
  "description": "Biomes Backend",
  "keywords": [
    "biomes",
    "neurosys"
  ],
  "author": "NeuroSYS",
  "license": "Apache-2.0",
  "repository": "https://github.com/NeuroSYS-pl/biomes",
  "main": "dist/main",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn prebuild && nest start",
    "start:dev": "yarn prebuild && nest start --watch",
    "start:debug": "yarn prebuild && nest start --debug --watch",
    "start:prod": "node dist/main",
    "cli": "node dist/cli",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@biomes/prisma": "workspace:packages/prisma",
    "@nestjs/common": "^8.0.1",
    "@nestjs/core": "^8.0.1",
    "@nestjs/cqrs": "^8.0.0",
    "@nestjs/graphql": "^8.0.2",
    "@nestjs/passport": "^8.0.0",
    "@nestjs/platform-express": "^8.0.1",
    "@nestjs/serve-static": "^2.2.2",
    "@prisma/client": "^2.26.0",
    "apollo-server-core": "^2.25.2",
    "apollo-server-express": "^2.25.2",
    "chalk": "^4.1.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "commander": "^8.0.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "inquirer": "^8.1.1",
    "js-yaml": "^4.1.0",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-http-bearer": "^1.0.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.2",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.1",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^26.0.24",
    "@types/js-yaml": "^4.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.3.0",
    "@types/passport-http-bearer": "^1.0.37",
    "@types/pg": "^8.6.1",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.6",
    "source-map-support": "^0.5.19",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
